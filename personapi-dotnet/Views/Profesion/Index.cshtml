@model List<personapi_dotnet.Models.Entities.Profesion>

<h1>Profesiones</h1>
<a asp-action="Add" class="btn btn-success">Registrar Nueva Profesion</a>
<table class="table">
 <thead>
 <tr>
 <th>Id</th>
 <th>Nombre</th>
 <th>Descripcion</th>
 <th></th>
 </tr>
 </thead>
 <tbody>
 @foreach(var item in Model)
 {
 <tr>
 <td>@item.Id</td>
 <td>@item.Nom</td>
 <td>@item.Des</td>
 <td>
 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
 <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
 </td>
 </tr>
 }
 </tbody>
</table>