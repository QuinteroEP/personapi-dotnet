@model personapi_dotnet.Models.Entities.Persona

<h1>Editar Persona</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Cc" />

    <div class="form-group">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Apellido" class="form-label"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Genero" class="form-label"></label>
        <input asp-for="Genero" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Edad" class="form-label"></label>
        <input asp-for="Edad" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Confirmar</button>
</form>